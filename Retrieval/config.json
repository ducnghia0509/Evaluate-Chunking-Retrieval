{
  "common": {
    "top_k": 10,
    "score_normalization": "min_max",
    "deduplicate": true,
    "max_context_tokens": 4096
  },

  "qdrant": {
    "host": "localhost",
    "port": 6333,
    "collection_prefix": "chunks",
    "vector_size": 768,
    "distance": "Cosine",
    "on_disk": false
  },

  "dense_retrieval": {
    "type": "dense",
    "embedding_model": "Alibaba-NLP/gte-multilingual-base",
    "embedding_dim": 768,
    "index": "qdrant",
    "metric": "cosine"
  },

  "sparse_retrieval": {
    "type": "sparse",
    "method": "bm25",
    "k1": 1.5,
    "b": 0.75
  },

  "hybrid_retrieval": {
    "type": "hybrid",
    "strategy": "weighted_sum",
    "dense_weight": 0.7,
    "sparse_weight": 0.3
  },

  "parent_retrieval": {
    "type": "parent",
    "retrieve_level": "child",
    "return_level": "parent",
    "aggregation": "max_score",
    "max_parents": 5
  },

  "evaluation": {
    "metrics": ["recall@k", "mrr", "ndcg", "precision@k"],
    "k_values": [1, 3, 5, 10],
    "latency": true,
    "save_results": true,
    "output_dir": "outputs/retrieval"
  }
}
